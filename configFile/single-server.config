server {
	listen 127.0.0.1:8080;

    root /home/larfef/Documents/C++/webserv/www/;

    # Error pages configuration
    error_page 400 /error-pages/400.html;
    error_page 401 /error-pages/401.html;
    error_page 403 /error-pages/403.html;
    error_page 404 /error-pages/404.html;
    error_page 405 /error-pages/405.html;
    error_page 413 /error-pages/413.html;
    error_page 414 /error-pages/414.html;
    error_page 500 /error-pages/500.html;

	location / {
        method GET;
		index static/home.html;
	}

    location /form {
        root /home/larfef/Documents/C++/webserv/www/;
        index static/form.html;
    }

    location /redirect {
        return 301 https://example.com/;
    }

    location /script.py {
        method POST;
        #cgi_pass script/cgi.py;
        cgi_params UPLOAD_DIR /home/larfef/Documents/C++/webserv/www/upload;
        client_max_body_size 100M;
    }

    location /GET
    {
        root /home/larfef/Documents/C++/webserv;
        index contents/index.html;
        cgi_pass /contents/GET.cgi;
        cgi_params PHP_VALUE test;
        cgi_params FILENAME file;
        cgi_params FILENAME1 file;
    }

	location /contact {
        method POST;
		root /home/larfef/Documents/www/static;
		index contact.html;
	}

	location /about {
		index invalid.html static/about.html;
	}
}